<Window x:Class="WPF_PDF_Organizer.Window_Search_in_Files"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_PDF_Organizer"
        mc:Ignorable="d"
        Title="Search in Files" Height="450" Width="800">
    <Grid>
        <Grid x:Name="GeneralGrid" Margin="0">
            <Button x:Name="Button_TestCreateItem" Content="Test" HorizontalAlignment="Left" Margin="47,40,0,0" VerticalAlignment="Top" Width="75" Click="Button_TestCreateItem_Click"/>
        </Grid>
        <GroupBox x:Name="GroupBox_Items" Grid.ColumnSpan="2" Header="" Margin="0" Grid.Row="1">
            <ScrollViewer>
                <StackPanel x:Name="StackPanel_Result_Search" Margin="0"/>
            </ScrollViewer>
            
        </GroupBox>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

    </Grid>
</Window>
